<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Product Management</title>
</head>
<body>
    
    <div class="container col-md-6">
        <h3>Products DashBoard</h3>
    <table class="table" style="margin-top: 10%;">
        <thead class="bg-dark text-white">
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% for(product of products){ %> 
          <tr>
            <th scope="row"><%= product.id %> </th>
            <td><%= product.name %> </td>
            <td><%= product.price %> </td>
            <td><%= product.category.name %> </td>
            <td><%= product.quantity %> </td>
            <td class="ml-4"><div class="btn-group">
                <a href="<%= product.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a> <form action="/products/<%= product.id %>?_method=DELETE" method="post"> <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button></form> 
            </div>
        </td>
          </tr>
          <% } %> 
        </tbody>
      </table>
    </div>
</body>
</html>